<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.newsapp.MainActivity">


    <com.google.android.material.tabs.TabLayout
        android:layout_margin="5dp"
        android:id="@+id/tabs_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabMode="scrollable"
        app:tabTextColor="@color/green"
        app:tabSelectedTextColor="@color/white"
        app:tabBackground="@drawable/background_tab"
        app:tabIndicator="@color/transparent"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tabs_content_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabs_items"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tabs_content_recyclerView"
        app:layout_constraintBottom_toBottomOf="@id/tabs_content_recyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>